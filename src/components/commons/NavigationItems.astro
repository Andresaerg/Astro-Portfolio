---
interface Props {
    lang: string,
    section: string
}

const { lang, section } = Astro.props;

const navItems = {
    'es': [
            {
                title: "Experiencia",
                url: "/#experiencia",
            },
            {
                title: "Proyectos",
                url: "/#proyectos",
            },
            {
                title: "Sobre m√≠",
                url: "/#sobre-mi",
            },
        ],
    'en': [
            {
                title: "Experience",
                url: "/en/#experience",
            },
            {
                title: "Projects",
                url: "/en/#projects",
            },
            {
                title: "About me",
                url: "/en/#about-me",
            },
        ],
}

const sectionHandler = {
    'header': 'header',
    'footer': 'footer',
    'burger': 'burger',
}

const optionsComponent = lang === 'es' ? navItems.es : navItems.en;
const sectionComponent = sectionHandler[section];
---

{sectionComponent === 'header' && (
    <ul class="hidden md:flex flex-row gap-x-4 text-sm font-semibold">
        { 
            optionsComponent.map(item => (
                <li>
                    <a href={ item.url } class="hover:text-sky-500 transition">
                        { item.title }
                    </a>
                </li>
            ))
        }
    </ul>
)}

{sectionComponent === 'footer' && (
    <ul class="flex flex-row gap-x-4 text-sm">
        {
            optionsComponent.map(item => (
                <li>
                    <a href={ item.url }>
                        { item.title }
                    </a>
                </li>
            ))
        }
    </ul>
)}

{sectionComponent === 'burger' && (
    <ul id="burger_list" class="transform transition ease-in-out duration-1000 burger__closed text-gray-100 overflow-hidden fixed inset-0 bg-black bg-opacity-80 backdrop-blur h-screen hidden items-center justify-center flex-col">
        {
            optionsComponent.map(item => (
                <li>
                    <a href={item.url}> { item.title } </a>
                </li>
            ))
        }
    </ul>
)}
