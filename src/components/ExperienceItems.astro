---
interface Props {
    title: string,
    company: string,
    description: string,
    date: string,
    animationTime: string,
};

const { title, company, description, date, animationTime } = Astro.props;
---

<div class=`absolute w-3 h-3 bg-sky-400 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-sky-500 animate-ping animate-delay-[${animationTime}]`></div>
<div class="absolute w-3 h-3 bg-sky-500 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-sky-600"></div>
<time class="mb-1 text-sm font-normal leading-none text-gray-600 dark:text-gray-300">
    { date }
</time>
<h4 class="text-2xl font-semibold bg-gradient-to-r from-[#02afc8] via-[#0fa5eb] to-[#64e6fa] bg-clip-text text-transparent mb-2">
    { title }
</h4>
<h4 class="text-lg font-semibold text-gray-900 dark:text-gray-300">
    { company }
</h4>
<p class="mb-4 text-base font-normal text-gray-500 dark:text-gray-400">
    { description }
</p>