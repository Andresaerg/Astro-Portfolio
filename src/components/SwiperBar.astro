    }
</style>

<script>
    import '@splidejs/splide/css/skyblue';
    import { Splide } from '@splidejs/splide';
    import { AutoScroll } from '@splidejs/splide-extension-auto-scroll';

    const splide = new Splide( '.splide', {
        type: 'loop',
        drag: 'free',
        focus: 'center',
        arrows: false,
        perPage: 6,
        pauseOnHover: false,
        pauseOnFocus: false,
        pagination: false,
        autoScroll: {
            speed: 1,
            pauseOnHover: false,
        },
        breakpoints: {
            768: {
                perPage: 4
            },
            640: {
                perPage: 2
            }
        }
    });

    splide.mount({AutoScroll});
</script>