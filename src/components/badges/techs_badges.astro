---
import Github from '../icons/Github.astro';
import View from '../icons/View.astro';

interface Props {
    label: string,
}

const { label } = Astro.props;

const BADGES = {
    'Tailwind': {component: 'Tailwind CSS', color: 'bg-sky-100 text-sky-800 dark:bg-sky-900 dark:text-sky-300'},
    'AlpineJS': {component: 'Alpine.js', color: 'bg-cyan-200 text-cyan-600 dark:bg-cyan-600 dark:text-cyan-200'},
    'Laravel': {component: 'Laravel', color: 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300'},
    'Livewire': {component: 'Livewire', color: 'bg-pink-100 text-pink-800 dark:bg-pink-900 dark:text-pink-300'},
    'Filamentphp': {component: 'Filamentphp', color: 'bg-[#FDE68A] text-[#D97706] dark:bg-[#D97706] dark:text-[#FDE68A]'},
    'HTML': {component: 'HTML', color: 'bg-orange-100 text-orange-800 dark:bg-orange-900 dark:text-orange-300'},
    'CSS': {component: 'CSS', color: 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300'},
    'JS': {component: 'JS', color: 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300'},
    'PHP': {component: 'PHP', color: 'bg-indigo-100 text-indigo-800 dark:bg-indigo-900 dark:text-indigo-300'},
    'C#': {component: 'C#', color: 'bg-[#178601] text-[#D9F99D] dark:bg-[#178600] dark:text-[#D9F99D]'},
    'Flutter': {component: 'Flutter', color: 'bg-[#02569B] text-slate-100 dark:bg-[#02569C] dark:text-slate-100'},
    // Agrega aquí más etiquetas y colores según sea necesario
};

const BadgeComponent = BADGES[label].component;
const BadgeColor = BADGES[label].color;
---
<span class=`${BadgeColor} bg-blue-100 text-blue-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded-full dark:bg-blue-900 dark:text-blue-300
            border-2 border-transparent animate-spin`>
    { BadgeComponent }
</span>