---
import V_svg from './v-svg.vue';
---

<div class="flex justify-center flex-col">
    <div class="flex justify-center gap-x-2 md:gap-x-4">
      <h1 id="firstname" class="text-3xl md:text-8xl animate-fade-right font-anta"><span class="/*text-sky-500*/ text-gradient">And</span>r√©s</h1>
      <h1 id="lastname" class="text-3xl md:text-8xl animate-fade-left font-anta"><span class="/*text-sky-500*/ text-gradient">Ros</span>ales</h1>
    </div>
    <div class="flex flex-col items-center gap-y-4">
      <div class="flex justify-center gap-x-2 md:gap-x-4">
        <h3 id="fullstack" class="text-md md:text-4xl animate-flip-down animate-delay-500">FULLSTACK</h3>
        <h3 id="developer" class="text-md md:text-4xl animate-flip-up animate-delay-700">DEVELOPER</h3>
      </div>
      <div class="flex justify-center items-center gap-x-4">
        <button class="animate-fade animate-delay-[1500ms]">
          <V_svg name="Github" customClass="text-gray-800 w-6 h-6 dark:text-gray-100"/>
        </button>
        <button class="animate-fade animate-delay-[1750ms]">
          <V_svg name="LinkedIn" customClass="text-gray-800 w-7 h-7 dark:text-gray-100"/>
        </button>
        <!-- <button class="animate-fade animate-delay-[2000ms]">
          <V_svg name="Mail" customClass="text-gray-800 w-6 h-6 dark:text-gray-100"/>
        </button> -->
        <button class="animate-fade animate-delay-[2000ms]">
          <V_svg name="Telegram" customClass="text-gray-800 w-6 h-6 dark:text-gray-100"/>
        </button>
      </div>
    </div>
</div>

<style>
    .text-gradient {
		background-image: linear-gradient(90deg, rgb(2, 175, 200), rgb(15, 165, 235), rgb(100, 230, 250));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}

    .name{
        font-size: 15rem;
        font-weight: bold;
        color: red;
    }

    h2{
        font-size: 4rem;
        font-weight: bold;
    }

    /* h3{
        font-size: 2rem;
        font-weight: bold;
    } */
</style>