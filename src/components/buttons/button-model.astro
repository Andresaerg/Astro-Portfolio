---
import Github from '../icons/Github.astro';
import View from '../icons/View.astro';
import Download from '../icons/Download.astro';

interface Props {
    label: string,
    icon: string,
    href?: string,
    classes? : string,
}

const { label, icon, href, classes } = Astro.props;

const ICONS = {
    'Github': Github,
    'View': View,
    'Download': Download,
};

const IconComponent = ICONS[icon];
---
<a href=`${href}` target="_blank">
    <button type="button" class=`${classes} py-2.5 px-5 me-2 mb-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700`>
        <div class="flex items-center gap-x-4">
            {
                <IconComponent class="w-6 h-6"/>
            }
            
            { label }
        </div>
    </button>
</a>