<script is:inline>
  window.onscroll = function(){
    var navButtons = document.querySelectorAll('nav button, #toggle');
    if (window.pageYOffset > 50) { // suponiendo que quieres cambiar el estilo despuÃ©s de desplazarte 100px
      navButtons.forEach(function(button) {
        button.classList.add('scroll');
      });
    } else {
      navButtons.forEach(function(button) {
        button.classList.remove('scroll');
      });
    }
  };
</script>

<style>
    nav {
      animation: nav-shadown 1s linear both;
      animation-timeline: scroll();
      animation-range: 0 100px;
    }

    nav a, nav a svg, nav button, nav button svg, nav#toggle {
      animation: button-animation 1s linear both;
      animation-timeline: scroll();
      animation-range: 0 100px;
    }

    nav button.scroll:focus {
      outline: none;
      box-shadow: none;
    }
  
    @keyframes nav-shadown {
      to {
        @apply shadow-lg ring-1 backdrop-blur bg-indigo-800/60 dark:bg-gray-800/60 ring-white/10;
      }
    }

    @keyframes button-animation {
      to {
        @apply text-gray-100 bg-transparent;
      }
    }
  </style>