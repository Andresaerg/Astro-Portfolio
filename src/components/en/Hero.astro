---
import V_svg from '../v-svg.vue';
import ButtonModel from '../buttons/button-model.astro';
---
<div class="flex justify-center flex-col">
  <div class="flex justify-center gap-x-3 text-4xl md:text-8xl md:gap-x-4">
    <h1 id="firstname" class="animate-fade-right"><span class="text-gradient">And</span>r√©s</h1>
    <h1 id="lastname" class="animate-fade-left"><span class="text-gradient">Ros</span>ales</h1>
  </div>
  <div class="flex flex-col items-center gap-y-4">
    <div class="flex justify-center gap-x-2 text-md md:text-4xl md:gap-x-4">
      <h3 id="fullstack" class="animate-flip-down animate-delay-500">FULLSTACK</h3>
      <h3 id="developer" class="animate-flip-up animate-delay-700">DEVELOPER</h3>
    </div>
    <ButtonModel label='Download CV' icon='Download' classes='animate-fade animate-delay-[1000ms]'/>
    <!-- <a href="#cv" class="group border-solid h-10 flex flex-wrap items-center">
      <button type="button" class="animate-fade animate-delay-[1000ms] py-2.5 px-5 me-2 mb-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">
        Descargar CV
      </button>
    </a> -->
    <div class="flex justify-center items-center gap-x-4">
      <button class="animate-fade animate-delay-[1500ms]">
        <a href="https://github.com/Andresaerg" target="_blank" class="hover:text-sky-500 transition">
          <span class="sr-only">Github</span>
          <V_svg name="Github" customClass="w-7 h-7"/>
        </a>
      </button>
      <button class="animate-fade animate-delay-[1750ms]">
        <a href="https://www.linkedin.com/in/andr%C3%A9s-rosales-21423125b/" target="_blank" class="hover:text-sky-500 transition">
          <span class="sr-only">Linkedin</span>
          <V_svg name="LinkedIn" customClass="w-8 h-8"/>
        </a>
      </button>
      <button class="animate-fade animate-delay-[2000ms]">
        <a href="https://telegram.me/arcodev_4" target="_blank" class="hover:text-sky-500 transition">
          <span class="sr-only">Telegram</span>
          <V_svg name="Telegram" customClass="w-7 h-7"/>
        </a>
      </button>
    </div>
  </div>
</div>

<style>
  .text-gradient {
		background-image: linear-gradient(90deg, rgb(2, 175, 200), rgb(15, 165, 235), rgb(100, 230, 250));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
</style>