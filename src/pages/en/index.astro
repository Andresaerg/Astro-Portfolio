---
import Layout from "../../layouts/Layout.astro";
import Projects from "../../components/en/Projects.astro";
import Hero from "../../components/en/Hero.astro";
import CounterBar from "../../components/en/CounterBar.astro";
import Experience from "../../components/en/Experience.astro";
import AboutMe from "../../components/en/AboutMe.astro";
import Contact from "../../components/en/Contact.astro";
import Braces from "../../components/icons/Braces.astro";
import About from "../../components/icons/About.astro";
import Mail from "../../components/icons/Contact.astro";
---

<Layout lang="en" title="AndrÃ©s Rosales | Engineer">
    <main class="">
        <section class="w-full mx-auto py-16 md:py-36 container">
            <Hero />
        </section>

        <section class="w-full bg-sky-500 dark:bg-sky-800 min-h-[50px] md:min-h-[100px] text-gray-100">
            <CounterBar />
        </section>

        <div id="experience" class="space-y-16 py-16 px-6">
            <section class="md:w-10/12 mx-auto">
                <Experience />
            </section>

            <section id="projects" class="md:w-10/12 mx-auto pt-16">
                <h3 class="flex gap-x-3 md:gap-x-6 items-center mb-8 text-3xl">
                    <span>
                        <Braces class="w-8 h-8"/>
                    </span>
                    Projects
                </h3>
                <Projects />
            </section>

            <section id="about-me" class="md:w-10/12 mx-auto pt-16">
                <h3 class="flex gap-x-3 md:gap-x-6 items-center mb-8 text-3xl">
                    <span>
                        <About class="w-8 h-8" />
                    </span>
                    About me
                </h3>
                <AboutMe />
            </section>

            <section class="md:w-10/12 mx-auto">
                <h3 class="flex gap-x-3 md:gap-x-6 items-center mb-8 text-3xl">
                    <span>
                        <Mail class="w-8 h-8" />
                    </span>
                    Contact
                </h3>
                <Contact />
            </section>
        </div>
    </main>
</Layout>
